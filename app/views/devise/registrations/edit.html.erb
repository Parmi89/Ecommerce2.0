<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4" style="background-color: #f8f9fa; border-radius: 8px; border: 1px solid #ccc;">
        <h2 class="text-center mb-4"><%= t('common.edit') %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "row g-3" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="col-12">
            <%= f.label :email, t('common.email'), class: "form-label" %>
            <%= f.email_field :email, class: "form-control form-control-sm" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="col-12">
              <div class="alert alert-info">
                Currently waiting confirmation for: <%= resource.unconfirmed_email %>
              </div>
            </div>
          <% end %>

          <div class="col-12">
            <%= f.label :username, t('common.username'), class: "form-label" %>
            <%= f.text_field :username, class: "form-control form-control-sm" %>
          </div>

          <div class="col-12">
            <%= f.label :password, t('.change_password'), class: "form-label" %>
            <%= f.password_field :password, class: "form-control form-control-sm", placeholder: t('.change_password') %>
          </div>

          <div class="col-12">
            <%= f.label :password_confirmation, t('.confirm_new_password'), class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control form-control-sm", placeholder: t('.confirm_new_password') %>
          </div>

          <div class="col-12">
            <%= f.label :current_password, t('.current_password'), class: "form-label" %>
            <%= f.password_field :current_password, class: "form-control form-control-sm", placeholder: t('.placeholder_current_password') %>
          </div>
           
          <div class="col-12 text-center">
            <%= f.submit t('common.accept'), class: "btn btn-primary mt-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-4 p-3" style="background-color: #f9f9f9; border-radius: 8px; border: 1px solid #ccc;">
        <div class="card-body">
          <h3><%= t('.my_information_personal') %></h3>

          <div class='text-center mt-3'>
            <%= link_to t('.my_information_personal'),user_info_user_path, class: "btn btn-primary mt-2" %>  
          </div>
        </div>  
      </div>    
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-4 p-3" style="background-color: #f9f9f9; border-radius: 8px; border: 1px solid #ccc;">
        <div class="card-body">
          <h3><%= t('.close_my_account') %></h3>

          <div class='text-center mt-3'>
            <%= button_to t('.cancel_my_account'), registration_path(resource_name),
                          data: { confirm: t('common.confirm'), turbo_confirm: t('common.confirm') },
                          method: :delete,
                          class: "btn btn-danger btn-sm",
                          style: "margin-bottom: 10px;" %>
          </div>
        </div>  
      </div>    
    </div>
  </div>
</div>

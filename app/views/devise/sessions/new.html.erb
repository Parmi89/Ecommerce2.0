<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4" style="background-color: #f8f9fa; border-radius: 8px; border: 1px solid #ccc;">
        <h2 class="text-center mb-4"><%= t('common.log_in') %></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "row g-3" }) do |f| %>
          <div class="col-12">
            <div class="form-group">
              <%= f.label :login, t(".email_or_username"), class: "form-label" %>
              <%= f.text_field :login, class: "form-control form-control-sm", placeholder: t(".email_or_username") %>
            </div>
          </div>

          <div class="col-12">
            <div class="form-group">
              <%= f.label :password, t("password"), class: "form-label" %>
              <%= f.password_field :password, class: "form-control form-control-sm", placeholder: t("password") %>
            </div>
          </div>

          <div class="col-12 text-center">
            <div class="form-group mt-4">
              <%= f.submit t('common.accept'), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

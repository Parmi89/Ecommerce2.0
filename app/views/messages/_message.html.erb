<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <strong><%= t('.sender') %>:</strong>
        <%= message.sender %>
      </div>
      <div class="mb-3">
        <strong><%= t('.title') %>:</strong>
        <%= message.title %>
      </div>
      <div class="mb-3">
        <strong><%= t('.body') %>:</strong>
        <%= message.body %>
      </div>
      <div class="mb-3">
        <strong><%= t('.state') %>:</strong>
        <%= message.state %>
      </div>
      <div class="d-flex justify-content-end">
        <%= link_to t('common.edit'), edit_message_path(message), class: "btn btn-primary btn-sm mr-2" %>
         <%= link_to t('common.delete'), message_path(message), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: t('common.confirm')} %>
      </div>
    </div>
  </div>
</div>

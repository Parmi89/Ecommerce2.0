<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card p-4" style="background-color: #f8f9fa; border-radius: 8px; border: 1px solid #ccc;">
        <h2 class="text-center mb-4"><%= t('common.edit') %></h2>

        <%= form_for(@user, as: :user, url: admin_user_path(@user), html: { method: :put, class: "row g-3" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: @user %>

          <div class="col-12">
            <%= f.label :email, t('common.email'), class: "form-label" %>
            <%= f.email_field :email, class: "form-control form-control-sm" %>
          </div>

          <div class="col-12">
            <%= f.label :username, t('common.username'), class: "form-label" %>
            <%= f.text_field :username, class: "form-control form-control-sm" %>
          </div>

          <div class="col-12">
            <%= f.label :password, t('.change_password'), class: "form-label" %>
            <%= f.password_field :password, class: "form-control form-control-sm", placeholder: t('.change_password') %>
          </div>

          <div class="col-12">
            <%= f.label :password_confirmation, t('.confirm_new_password'), class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control form-control-sm", placeholder: t('.confirm_new_password') %>
          </div>

          <!-- Eliminamos el campo de contraseÃ±a actual -->
          <!-- <div class="col-12">
            <%= f.label :current_password, t('.current_password'), class: "form-label" %>
            <%= f.password_field :current_password, class: "form-control form-control-sm", placeholder: t('.placeholder_current_password') %>
          </div> -->

          <div class="col-12 text-center">
            <%= f.submit t('common.accept'), class: "btn btn-primary btn-sm mt-2" %>
            <%= link_to t('common.back'), admin_users_path, class: "btn btn-primary btn-sm mt-2" %> 
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
